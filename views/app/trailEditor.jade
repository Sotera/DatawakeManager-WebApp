div.ngdialog(ng-controller="trailEditController").col-md-12
    div.ngdialog-overlay
        div.ngdialog-content
            div.panel.panel-primary
                div.panel-heading
                    h4 Edit Trail Items for: {{trailName}} &nbsp;&nbsp;&nbsp;
                        button.inputItem.btn.btn-primary.btn-xs.btn-success(ng-click="showAdd = ! showAdd" title="Import or Add Trail")
                            .glyphicon.glyphicon-plus-sign(ng-show="!showAdd")
                            .glyphicon.glyphicon-minus-sign(ng-show="showAdd")

                    div(ng-show='showAdd')
                        table
                            form(role="form" name="domainedit")
                                tr
                                    th.col-md-4 Trail URL
                                    th.col-md-2 Trail User
                                    th.col-md-1 &nbsp;
                                tr
                                    td.col-md-2
                                        input.form-control.span1.required(ng-model='data.url' type="text")
                                    td.col-md-4
                                        input.form-control.span1.required(ng-model='data.useremail' type="text")
                                    td.col-md-1
                                        button.btn.btn-sm.btn-success(ng-click='addTrailItem()') Add Item
                                tr
                                    td &nbsp;
                div.panel-body
                    div
                        table.table.table-striped.table-condensed.table-hover.ng-table-responsive(ng-table="tableParams" show-filter="false" style="width:90%; height:500px"  export-csv="csv" fixed-header)
                            tr(ng-repeat="item in trailItems")
                                td.col-md-1(data-title="'Domain ID'" ng-show="tableParams.myShowFlag") {{item.domainId}}
                                td.col-md-1(data-title="'Trail Name'" ng-show="tableParams.myShowFlag") {{item.name}}
                                td.col-md-1(data-title="'Trail Description'" ng-show="tableParams.myShowFlag") {{item.description}}
                                td.col-md-1(data-title="'Trail Team'" ng-show="tableParams.myShowFlag") {{item.teamId}}
                                td.col-md-2(data-title="'Id'" sortable="'id'" filter="{ 'id': 'text' }") {{item.id}}
                                td.col-md-3(data-title="'URL'" sortable="'url'" filter="{ 'url': 'text' }") {{item.url}}
                                td.col-md-2(data-title="'Created'" sortable="'created'" filter="{ 'created': 'text' }") {{item.ts }}
                                td.col-md-2(data-title="'Created By'" sortable="'useremail'" filter="{ 'useremail': 'text' }") {{item.useremail}}
                                td.col-md-1
                                    button.inputItem.btn.btn-primary.btn-xs.btn-danger.glyphicon.glyphicon-minus-sign(ng-click="removeItem(item)" title="Remove Trail Item")
                    div.col-md-8.col-md-offset-4
                        div.btn-group-xs
                            a.btn.btn-default(ng-click="close()" title="Close")
                                i.glyphicon.glyphicon-remove &#160;Close


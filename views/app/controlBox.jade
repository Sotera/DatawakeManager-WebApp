                        //                        .glyphicon.glyphicon-chevron-down(ng-show="!group.$hideRows")
                        //                    strong(title="Description: {{group.data[0].description}}") Name: {{group.value}} &nbsp;&nbsp;&nbsp;  Used by Team: {{group.data[0].teamId}} &nbsp;
                        //
                        //                button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-export(title="Export this Domain and its Items")
                        //
                        //        tr(ng-show="!group.$hideRows" ng-repeat="item in group.data | orderBy:['featureType','featureValue']" )
                        //            td.col-md-2(data-title="'Description'" sortable="'description'" filter="{ 'description': 'text' }") {{item.description}}
                        //            td.col-md-2(data-title="'Feature Type'" filter="{ 'featureType': 'text' }") {{item.featureType}}

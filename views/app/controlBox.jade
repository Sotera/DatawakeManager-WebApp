                        table.table.table-striped.table-condensed.table-hover.ng-table-responsive(ng-table="tableParams" show-filter="false")
                            tr(ng-repeat="domain in $data" )
                                td.col-md-2(data-title="'Domain ID'" sortable="'id'") {{domain.id}}
                                td.col-md-2(data-title="'Domain Name'" sortable="'name'" filter="{ 'name': 'text' }") {{domain.name}}
                                td.col-md-3(data-title="'Domain Description'" sortable="'description'" filter="{ 'name': 'text' }") {{domain.description}}
                                td.col-md-2(data-title="'Team Name'" sortable="'teamId'") {{domain.teamId}}
                                td.col-md-1
                                    button.inputItem.btn.btn-primary.btn-xs.btn-primary.glyphicon.glyphicon-edit(ng-click="openDomainEditor(domain)" title="Edit domain items")




            div.tab( id="four.tpl.html" ng-class="{hidden:!isActiveTab('four.tpl.html')}")
                div.col-md-12(ng-controller="trailTabController")
                    h2 Datawake Trails &nbsp;&nbsp;
                        button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-refresh(ng-click="getTrails()" title="Refresh Trails List")
                    div
                        table.table.table-striped.table-condensed.table-hover.ng-table-responsive(ng-table="tableParams" show-filter="true")
                            tr(ng-repeat="trail in $data" )
                                td.col-md-1(data-title="'ID'" sortable="'id'") {{trail.id}}
                                td.col-md-2(data-title="'Name'" sortable="'name'" filter="{ 'name': 'text' }") {{trail.name}}
                                td.col-md-2(data-title="'Description'" sortable="'description'" filter="{ 'description': 'text' }") {{trail.description}}
                                td.col-md-2(data-title="'Date Created'" sortable="'created'" filter="{ 'created': 'text' }") {{trail.created | date}}
                                td.col-md-2(data-title="'Created By'" sortable="'createdBy'" filter="{ 'createdBy': 'text' }") {{trail.createdBy}}
                                td.col-md-1(align="center" data-title="'Domain ID'" sortable="'domainId'" filter="{ 'domainId': 'text' }") {{trail.domainId}}
                                td.col-md-1(align="center" data-title="'Team ID'" sortable="'teamId'" filter="{ 'teamId': 'text' }") {{trail.teamId}}
                                td.col-md-1
                                    button.inputItem.btn.btn-primary.btn-xs.btn-danger.glyphicon.glyphicon-minus-sign(ng-click="removeTrail(trail)")



